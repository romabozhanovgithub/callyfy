# FastAPI application settings
APP_NAME=Callyfy
APP_VERSION=0.1.0
APP_HOST=0.0.0.0
APP_PORT=8000

# Database configuration
# Use an absolute path if you prefer a specific location
DB_PATH=data/callyfy.db
DB_ECHO=false

# Local storage paths
PATHS_DATA_DIR=data
PATHS_AUDIO_DIR_NAME=audio
PATHS_SCREEN_DIR_NAME=screens

# Audio capture & ASR
# Configure the capture backend (portaudio/mss/etc.) and model runtime
AUDIO_INPUT_DEVICE_INDEX=
ASR_MODEL_PATH=./models/asr/parakeet-0.6b
ASR_DEVICE=cpu

# Summarization model (local LLM)
LLM_MODEL_PATH=./models/llm/phi-3.5-mini-q4.gguf
LLM_CONTEXT_WINDOW=4096
LLM_RUNTIME=llama_cpp  # options: llama_cpp, ollama
LLM_SERVER_URL=http://127.0.0.1:8080

# Vision-language model
VLM_MODEL_PATH=./models/vlm/qwen2.5-vl-7b-q4.gguf
VLM_RUNTIME=llama_cpp
VLM_SERVER_URL=http://127.0.0.1:8081

# Screen capture configuration
SCREEN_CAPTURE_BACKEND=auto  # options: auto, mss, pyautogui, quartz
SCREEN_CAPTURE_REGION=

# Scheduling intervals (seconds)
AUDIO_TRANSCRIBE_INTERVAL=2
SCREEN_CAPTURE_INTERVAL=5
SUMMARY_RELEVANT_INTERVAL=10
SUMMARY_ROLLING_INTERVAL=30

# Miscellaneous
LOG_LEVEL=INFO
DATA_RETENTION_DAYS=30
